---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";


const forms = await getCollection("forms") ;
export const prerender = true
	
---

<Layout
	title="Inicio - Formularios de MigraciÃ³n"
	description="Sistema de formularios para procesos migratorios"
>
	<Header slot="header" />
	
	

	<section class="bg-slate-50">
		<div class="container mx-auto px-6 py-12">
			
			<div class="mt-10 grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
				{forms.map((form) => (
					<article class="group h-full rounded-2xl border border-slate-200 bg-white/80 p-6 shadow-sm transition hover:-translate-y-1 hover:border-slate-300 hover:shadow-lg">
						<a href={`formularios/${form.slug}/`} class="flex h-full flex-col gap-4">
							
								<h3 class="text-lg font-semibold text-slate-900 group-hover:text-sky-700">
									{form.data.title ?? form.slug}
								</h3>
							
						</a>
					</article>
				))}
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</Layout>
