---
interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	authors?: string;
	openGraph?: {
		title: string;
		description: string;
		type: string;
	};
}

export const viewport = {
	width: "device-width",
	initialScale: 1,
	themeColor: "#2e707b",
};

const {
	title = "M-Migration LLC - Tu Camino Hacia el Sueño American",
	description = "Especialistas en llenado de formularios migratorios. Llenado de formularios de visas de trabajo, reunificación familiar, VAWA, Visa U y T. Más de 15 años organizando documentos para familias.",
	keywords = "inmigración, visas de trabajo, reunificación familiar, VAWA, Visa U, Visa T, llenado de formularios, M-Migration LLC",
	authors = "M-Migration LLC",
	openGraph = {
		title:
			"M-Migration LLC - Especialistas en Llenado de Formularios Migratorios",
		description: "Asistencia en llenado de formularios migratorios",
		type: "website",
	},
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content={viewport.themeColor} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={authors} />

		<meta property="og:type" content={openGraph.type} />
		<meta property="og:title" content={openGraph.title} />
		<meta property="og:description" content={openGraph.description} />

		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="icon/icono.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="min-h-screen bg-black text-white font-sans antialiased">
		<slot name="header" />
		<main class="w-full">
			<slot />
		</main>
		<slot name="footer" />
	</body>
</html>
