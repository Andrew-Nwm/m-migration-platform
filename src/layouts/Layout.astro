---
interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Formularios de Migraci√≥n",
	description = "Sistema de formularios migratorios",
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body class="min-h-screen flex flex-col bg-gray-50">
		<slot name="header" />
		<main class="flex-1">
			<slot />
		</main>
		<slot name="footer" />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
</style>
